{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Client",
            "request": "launch",
            "mainClass": "edu.asu.stratego.Client",
            "vmArgs": "--module-path ${workspaceFolder}/javafx-sdk-24/lib --add-modules javafx.controls,javafx.media",
            "classPaths": [
                "${workspaceFolder}/target/classes"
            ]
        },
        {
            "type": "java",
            "name": "Server",
            "request": "launch",
            "mainClass": "edu.asu.stratego.Server"
        },
        {
            "type": "java",
            "name": "Current File",
            "request": "launch",
            "vmArgs": "--module-path ${workspaceFolder}/javafx-sdk-24/lib --add-modules javafx.controls,javafx.fxml",
            "mainClass": "${file}"
        }
    ]
}